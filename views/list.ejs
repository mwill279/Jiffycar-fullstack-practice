  <% inventory.forEach(function(car){ %>
    <% if(car.rented){ %>
      <div class="notavail"></div>
      <% }else{ %>
        <div>
        <% } %>
        Make: <%= car.make %><br>
        Model: <%= car.model %><br>
        Year: <%= car.year %><br>
        Number of seats: <%= car.numSeats %><br>
        Price: <%= car.price %><br>
      </div>

      <% if(car.rented){ %>
        From: <%= car.rentedFrom%><br>
        To: <%= car.rentedTo%><br>
        Number of days rented: <%= car.history.numofdays%><br>
        Miles Driven: <%= car.history.miles%><br>
        Total Price: $<%= car.history.totalprice%><br>
        Total Price w/vat: $<%= car.history.totalprice_vat%><br>
        
      <% } %>
      <a href="/edit/<%= car._id%>">Edit Car</a>
      <a href="/history/<%= car._id%>">History</a>
